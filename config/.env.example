# Основные настройки
BOT_TOKEN=your_bot_token
DEVELOPER_ID=your_developer_id
BOT_ENV=local  # local/staging/production

# Настройки базы данных для продакшена
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bot_db
DB_USER=bot_user
DB_PASSWORD=your_secure_password

# Пути для продакшена
PRODUCTION_STORAGE_PATH=/var/www/bot
PRODUCTION_LOGS_PATH=/var/log/bot

# Настройки API
MAPS_API_KEY=your_maps_api_key
CRYPTO_BOT_API_KEY=your_crypto_api_key